<!--BLOG POSTS-->
<center><h2 id="blogs">BLOGS</h2></center>
<div id="content">
  <%blogs.forEach(function(blog){%>
<div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-preview">
            <a href="/blogs/<%=blog._id%>">
              <h2 class="post-title">
                <%=blog.name%>
              </h2>
           
              <h3 class="post-subtitle">
                <%=blog.subdescription%>
              </h3>
            </a>
            <p class="post-meta">Posted by
              <a href="#"><%=blog.author.username%></a>
              on <%=blog.created.toDateString()%></p>
          </div>
          <hr>
        </div>
      </div>
    </div>

<% })%>
</div>


         

<center><p class="btn btn-success"id="listen">READ MORE</p></center>
<script>
  document.querySelector('#listen').addEventListener('click', function() {
    var elem = $("#listen").text();
    if(elem=="READ MORE"){
       document.querySelector('#content').style.height= 'auto';
       $("#listen").text("READ LESS");
    }else{
      
      document.querySelector('#content').style.overflow= 'hidden';
      document.querySelector('#content').style.height= '30em';
      $("#listen").text("READ MORE");
      
    }
  // this.style.display= 'none';
  
});

</script>
