<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=blog.name%></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[name]" value="<%=blog.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[image]" value="<%=blog.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="blog[subdescription]" value="<%=blog.subdescription%>">
                </div>
                <div class="form-group">
                    <input class="form-control" class="form-control" value="<%=blog.description%>"></input>
                </div>
                <div class="form-group">
                    <textarea id="mytextarea" class="form-control" name="blog[description]" placeholder="<%=blog.description%>" ></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>


<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
  <script type="text/javascript">
  tinymce.init({
    selector: '#mytextarea'
      plugins: "codesample",
  toolbar: "codesample"
  });
  

  
  </script>


<% include ../partials/footer %>
